<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E4A276"
    tools:context=".DrawingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:id="@+id/undoIV"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:src="@drawable/ic_back" />

        <ImageView
            android:id="@+id/redoIV"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:src="@drawable/ic_forward" />

        <ImageView
            android:id="@+id/clearIV"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="5dp"
            android:padding="8dp"
            android:src="@drawable/ic_delete" />

        <ImageView
            android:id="@+id/saveIV"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="5dp"
            android:padding="8dp"
            android:src="@drawable/ic_save" />
    </LinearLayout>

    <com.nabdroid313.tattoostore.PaintView
        android:id="@+id/paintView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/black_color"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="5dp"
                android:background="@drawable/circle_button_background"
                android:backgroundTint="@color/black"
                android:text="B"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/red_color"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="5dp"
                android:background="@drawable/circle_button_background"
                android:backgroundTint="@color/red"
                android:text="R"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/blue_color"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="5dp"
                android:background="@drawable/circle_button_background"
                android:backgroundTint="@color/blue"
                android:text="B"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/green_color"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="5dp"
                android:background="@drawable/circle_button_background"
                android:backgroundTint="@color/green"
                android:text="G"
                android:textColor="@color/black" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/thinLineButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Thin Line"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/fatLineButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Fat Line"
                android:textAllCaps="false"/>


        </LinearLayout>




    </LinearLayout>

</LinearLayout>